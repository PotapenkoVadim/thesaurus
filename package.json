    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.2",
    "sass": "^1.86.0",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.0.3"
  },
  "overrides": {
    "eslint": "^9.23.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./commands/pre-commit"
    }
